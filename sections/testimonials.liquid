{%- liquid
  # Pre-calculate values for performance
  assign heading = section.settings.heading | escape
  assign subheading = section.settings.subheading | escape
  assign blocks = section.blocks
  assign blocks_count = blocks.size
  assign show_images = section.settings.show_images
  assign show_ratings = section.settings.show_ratings
  assign columns_desktop = section.settings.columns_desktop | default: 3
  assign color_scheme = section.settings.color_scheme | default: 'light'
  assign enable_animations = section.settings.enable_animations
  assign animation_style = section.settings.animation_style | default: 'fade-up'
-%}

{% if blocks_count > 0 %}
  <section 
    class="testimonials-section testimonials--{{ color_scheme }} testimonials--cols-{{ columns_desktop }}"
    role="region" 
    aria-labelledby="testimonials-heading-{{ section.id }}"
    data-section-id="{{ section.id }}"
    data-enable-animations="{{ enable_animations }}"
    data-animation-style="{{ animation_style }}"
  >
    <div class="testimonials__container">
      
      <!-- Header -->
      <header class="testimonials__header">
        {% if heading != blank %}
          <h2 
            id="testimonials-heading-{{ section.id }}" 
            class="testimonials__heading"
          >
            {{ heading }}
          </h2>
        {% endif %}
        
        {% if subheading != blank %}
          <p class="testimonials__subheading">{{ subheading }}</p>
        {% endif %}
      </header>
      
      <!-- Testimonials Grid -->
      <div class="testimonials__grid" role="list">
        {% for block in blocks %}
          {% render 'testimonial-card',
            block: block,
            show_images: show_images,
            show_ratings: show_ratings,
            enable_animations: enable_animations,
            animation_style: animation_style,
            index: forloop.index
          %}
        {% endfor %}
      </div>
      
      <!-- Optional CTA Button -->
      {% if section.settings.button_label != blank %}
        <div class="testimonials__cta">
          <a 
            href="{{ section.settings.button_link | url_param_escape | default: '#' }}"
            class="testimonials__button"
          >
            {{ section.settings.button_label | escape }}
            <span class="testimonials__button-icon" aria-hidden="true">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M4 10h12m0 0l-4-4m4 4l-4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </span>
          </a>
        </div>
      {% endif %}
      
    </div>
  </section>
{% endif %}

<script>
  // Intersection Observer for scroll animations
  (function() {
    const section = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (!section) return;
    
    const enableAnimations = section.dataset.enableAnimations === 'true';
    if (!enableAnimations) return;
    
    const cards = section.querySelectorAll('.testimonial-card');
    
    const observerOptions = {
      root: null,
      rootMargin: '0px 0px -50px 0px',
      threshold: 0.1
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          // Staggered animation delay
          setTimeout(() => {
            entry.target.classList.add('is-visible');
          }, index * 100);
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);
    
    cards.forEach(card => observer.observe(card));
  })();
</script>

