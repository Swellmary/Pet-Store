{% comment %}
  FAQ Accordion Section
  Stylesheet: assets/faq-accordion.css
{% endcomment %}

{{ 'faq-accordion.css' | asset_url | stylesheet_tag }}

<div class="faq-section">
  {% if section.settings.title != blank %}
    <h2 class="faq-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  {% for block in section.blocks %}
    <div class="faq-item" {{ block.shopify_attributes }}>
      <button class="faq-question" aria-expanded="false">
        <span>{{ block.settings.question }}</span>
        <span class="faq-icon">+</span>
      </button>
      <div class="faq-answer">
        <p>{{ block.settings.answer }}</p>
      </div>
    </div>
  {% endfor %}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const faqQuestions = document.querySelectorAll('.faq-question');
    
    faqQuestions.forEach(function(button) {
      button.addEventListener('click', function() {
        const faqItem = this.parentElement;
        const isActive = faqItem.classList.contains('active');
        
        // Close all other items
        document.querySelectorAll('.faq-item').forEach(function(item) {
          item.classList.remove('active');
          item.querySelector('.faq-question').setAttribute('aria-expanded', 'false');
        });
        
        // Toggle current item
        if (!isActive) {
          faqItem.classList.add('active');
          this.setAttribute('aria-expanded', 'true');
        }
      });
    });
  });
</script>

{% schema %}
{
  "name": "FAQ Accordion",
  "tag": "section",
  "class": "faq-accordion-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Frequently Asked Questions"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is your question?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "Your answer goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Accordion",
      "blocks": [
        {
          "type": "faq"
        },
        {
          "type": "faq"
        },
        {
          "type": "faq"
        }
      ]
    }
  ]
}
{% endschema %}